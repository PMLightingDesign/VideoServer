<div class="card-wrapper">
  <div class="w3-card">
    <header class="w3-container w3-light-gray vtile-header">
      <p>{{this.name}} <span class="label label-default pull-right ext-tag">{{this.ext}}</span></p>
    </header>
    <div class="w3-container">
      <img src="/img/thumbs/{{this.name}}.png" style="width:100%; margin-bottom:0px;">
    </div>
    <footer class="w3-container w3-light-gray vtile-footer">
      <button class="btn-trans" id="{{this.fullPath}}" onclick="playURL(this.id);" data-toggle="tooltip" title="Play">
        <i class="fa fa-play" style="font-size: 1.5em;"></i>
      </button>
      <button class="btn-trans" id="{{this.fullPath}}" onclick="appendList(this.id);" data-toggle="tooltip" title="Add to Playlist">
        <i class="fa fa-plus-square" style="color: #51A351; font-size: 1.5em;"></i>
      </button>
  </div>
</div>
